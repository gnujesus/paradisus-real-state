@model PropertyViewModel

<div class="container mx-auto p-6">
    <div class="flex flex-wrap -mx-3">
        <!-- Left column for images -->
        <div class="w-full lg:w-2/3 px-3">
            <div class="bg-gray-100 p-4 mb-4">
                <img src="https://raw.githubusercontent.com/HybridShivam/Pokemon/master/assets/images/006-Gmax.png" alt="Property Image" class="w-full h-80 object-cover mb-4">
                <div class="flex items-center justify-between">
                    <span class="text-sm text-gray-600">Código: @Model.Code</span>
                    <span class="text-sm text-gray-600"> <i class="fas fa-expand"></i>  +9 Fotos disponibles</span>
                </div>
            </div>
        </div>
        <!-- Right column for details and contact -->
        <div class="w-full lg:w-1/3 px-3">
            <div class="bg-white p-6 shadow-lg mb-4">
                <h2 class="text-2xl font-bold mb-2">@Model.Title</h2>
                <p class="text-lg text-gray-600 mb-4">@Model.SaleType</p>
                <p class="text-2xl text-red-600 font-bold mb-4">@Model.Price</p>
                <div class="flex space-x-4 mb-4">
                    <div class="flex items-center space-x-2">
                        <i class="fas fa-bed"></i>
                        <span>@Model.Beds Habitaciones</span>
                    </div>
                    <div class="flex items-center space-x-2">
                        <i class="fas fa-bath"></i>
                        <span>@Model.Baths Baños</span>
                    </div>
                    <div class="flex items-center space-x-2">
                        <i class="fas fa-ruler-combined"></i>
                        <span>@Model.Size mt²</span>
                    </div>
                </div>
                <h3 class="text-lg font-bold mb-2">Descripción</h3>
                <p class="text-gray-700">@Model.Description</p>
            </div>
            <div class="bg-white p-6 shadow-lg">
                <h3 class="text-lg font-bold mb-4">¿Estás interesado(a)? ¡Solicita Asesoría!</h3>
                <div class="flex items-center mb-4">
                    <img src="/path/to/agent/image.jpg" alt="Agent Image" class="w-16 h-16 rounded-full mr-4">
                    <div>
                        <h4 class="text-xl font-bold">@Model.AgentName</h4>
                        <p class="text-sm text-gray-600">@Model.AgentTitle</p>
                    </div>
                </div>
                <div class="flex flex-col space-y-2">
                    <a href="tel:@Model.AgentPhone" class="flex items-center text-blue-500">
                        <i class="fas fa-phone-alt mr-2"></i> @Model.AgentPhone
                    </a>
                    <a href="https://wa.me/@Model.AgentWhatsapp" class="flex items-center text-green-500">
                        <i class="fab fa-whatsapp mr-2"></i> @Model.AgentWhatsapp
                    </a>
                    <a href="mailto:@Model.AgentEmail" class="flex items-center text-gray-700">
                        <i class="fas fa-envelope mr-2"></i> @Model.AgentEmail
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
