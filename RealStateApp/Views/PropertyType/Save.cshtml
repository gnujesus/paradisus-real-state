@model SaveTypePropertyViewModel

@{
    ViewData["Title"] = "Create Property Type";
    bool editMode = @Model.Id != "" && Model.Id != null;
    string action = editMode ? "Update" : "Save";
}

<h2 class="text-4xl font-bold mb-8">@action Property Type</h2>

<form asp-controller="PropertyType" asp-action="@action" method="post" class="bg-white shadow rounded-lg p-8 space-y-6 w-full max-w-3xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
            <label class="block text-gray-700 text-sm font-bold mb-2" asp-for="Name">Name</label>
            <input class="shadow-sm appearance-none border rounded w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" asp-for="Name" />
            <span asp-validation-for="Name" class="text-red-500 text-xs italic"></span>
        </div>

        <div class="col-span-1 md:col-span-2">
            <label class="block text-gray-700 text-sm font-bold mb-2" asp-for="Description">Description</label>
            <textarea class="shadow-sm appearance-none border rounded w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" asp-for="Description"></textarea>
            <span asp-validation-for="Description" class="text-red-500 text-xs italic"></span>
        </div>
    </div>

    <div class="flex items-center justify-between">
        <a asp-controller="PropertyType" asp-action="Index" class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Cancel</a>
        <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">Save</button>
    </div>

    <input type="hidden" asp-for="Id" />
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
