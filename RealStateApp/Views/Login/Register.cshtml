@model RealStateApp.Core.Application.ViewModels.UserModels.SaveUserViewModel

@{
    ViewData["Title"] = "Register";
}

<section class="py-12 bg-gray-100">
    <div class="container mx-auto px-6 md:px-12 lg:px-24">
        <h2 class="text-4xl font-bold mb-8 text-center">Register</h2>
        <form asp-action="Register" method="post" enctype="multipart/form-data" class="bg-white p-8 rounded-lg shadow-md max-w-lg mx-auto border border-gray-300">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                <div>
                    <label for="FirstName" class="block text-gray-700 font-semibold">Name</label>
                    <input asp-for="FirstName" class="mt-1 block w-full border border-gray-400 rounded-md shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 py-2 px-3" />
                    <span asp-validation-for="FirstName" class="text-red-500 text-sm mt-2 block"></span>
                </div>
                <div>
                    <label for="LastName" class="block text-gray-700 font-semibold">Last Name</label>
                    <input asp-for="LastName" class="mt-1 block w-full border border-gray-400 rounded-md shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 py-2 px-3" />
                    <span asp-validation-for="LastName" class="text-red-500 text-sm mt-2 block"></span>
                </div>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                <div>
                    <label for="UserName" class="block text-gray-700 font-semibold">Username</label>
                    <input asp-for="UserName" class="mt-1 block w-full border border-gray-400 rounded-md shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 py-2 px-3" />
                    <span asp-validation-for="UserName" class="text-red-500 text-sm mt-2 block"></span>
                </div>
                <div>
                    <label for="Type_User" class="block text-gray-700 font-semibold">Elija el tipo de usuario</label>
                    <select asp-for="Type_User" class="mt-1 block w-full border border-gray-400 rounded-md shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 py-2 px-3">
                        <option value="">Escoja un tipo de usuario</option>
                        <option value="@Roles.Client">Cliente</option>
                        <option value="@Roles.Agent">Agente</option>
                    </select>
                    <span asp-validation-for="Type_User" class="text-red-500 text-sm mt-2 block"></span>
                </div>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                <div>
                    <label for="Email" class="block text-gray-700 font-semibold">Email</label>
                    <input asp-for="Email" class="mt-1 block w-full border border-gray-400 rounded-md shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 py-2 px-3" />
                    <span asp-validation-for="Email" class="text-red-500 text-sm mt-2 block"></span>
                </div>
                <div>
                    <label for="Phone" class="block text-gray-700 font-semibold">Phone Number</label>
                    <input asp-for="Phone" class="mt-1 block w-full border border-gray-400 rounded-md shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 py-2 px-3" />
                    <span asp-validation-for="Phone" class="text-red-500 text-sm mt-2 block"></span>
                </div>

            </div>

            <div>
                <label for="Phone" class="block text-gray-700 font-semibold">National ID</label>
                <input asp-for="NationalId" class="mt-1 block w-full border border-gray-400 rounded-md shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 py-2 px-3" />
                <span asp-validation-for="NationalId" class="text-red-500 text-sm mt-2 block"></span>
            </div>

            <div class="mb-6">
                <label for="Password" class="block text-gray-700 font-semibold">Password</label>
                <input asp-for="Password" type="password" class="mt-1 block w-full border border-gray-400 rounded-md shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 py-2 px-3" />
                <span asp-validation-for="Password" class="text-red-500 text-sm mt-2 block"></span>
            </div>
            <div class="mb-6">
                <label for="ConfirmPassword" class="block text-gray-700 font-semibold">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="mt-1 block w-full border border-gray-400 rounded-md shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 py-2 px-3" />
                <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm mt-2 block"></span>
            </div>
            <div class="mb-6">
                <label for="ImageFile" class="block text-gray-700 font-semibold">Picture</label>
                <input asp-for="ImageFile" type="file" class="mt-1 block w-full border border-gray-400 rounded-md shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 py-2 px-3" />
                <span asp-validation-for="ImageFile" class="text-red-500 text-sm mt-2 block"></span>
            </div>
            <div class="text-center">
                <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 shadow">Register</button>
            </div>
        </form>
    </div>
</section>
