@model PropertyViewModel

@{
    var project = new
    {
        Title = "Apartamento",
        Location = "Iberstate, Bavaro",
        Code = "161533",
        SaleType = "Venta Amueblado",
        Price = "US$ 249,000",
        Beds = 2,
        Baths = 2,
        Size = "156mt",
        ImageUrl = "https://raw.githubusercontent.com/HybridShivam/Pokemon/master/assets/images/006-Gmax.png",
        Exclusive = true
    };
}

<div class="max-w-sm rounded overflow-hidden shadow-lg bg-white border">
    <div class="relative">
        <img class="w-full h-48 object-cover" src="@project.ImageUrl" alt="Project Image">
        @if (project.Exclusive)
        {
            <div class="absolute top-0 right-0 bg-blue-500 text-white text-xs font-bold px-2 py-1 transform rotate-45 translate-x-1/2 -translate-y-1/2">
                EXCLUSIVA
            </div>
        }
    </div>
    <div class="px-6 py-4">
        <div class="font-bold text-xl mb-2">@project.Title</div>
        <p class="text-gray-700 text-base">@project.Location</p>
        <p class="text-gray-700 text-base"><strong>Código:</strong> @project.Code</p>
        <p class="text-gray-700 text-base"><strong>@project.SaleType</strong></p>
        <p class="text-red-500 text-lg"><strong>Venta:</strong> @project.Price</p>
    </div>
    <div class="px-6 py-4">
        <div class="flex items-center space-x-4">
            @if (project.Beds > 0)
            {
                <div class="flex items-center">
                    <svg class="w-6 h-6 text-gray-700 mr-1" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path d="M20 12H4a2 2 0 0 0-2 2v6h2v-2h16v2h2v-6a2 2 0 0 0-2-2zm0 4H4v-2h16v2zm-4-8v4h2v-4a2 2 0 0 0-2-2h-2V4a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v2H6a2 2 0 0 0-2 2v4h2v-4h8zm-6-6h4v2h-4V2z"></path>
                    </svg>
                    <span class="text-gray-700">@project.Beds</span>
                </div>
            }
            @if (project.Baths > 0)
            {
                <div class="flex items-center">
                    <svg class="w-6 h-6 text-gray-700 mr-1" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path d="M19 10h-6.586l-1.707-1.707A1 1 0 0 0 10 8H8a1 1 0 0 0 0 2h2v6H7v-6H5a1 1 0 0 0 0 2h2v6a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2v-6h2a1 1 0 0 0 0-2zM8 4a2 2 0 0 1 4 0v2h-4V4zm5.707 5H18v6h-4V9.707z"></path>
                    </svg>
                    <span class="text-gray-700">@project.Baths</span>
                </div>
            }
            @if (!string.IsNullOrEmpty(project.Size))
            {
                <div class="flex items-center">
                    <svg class="w-6 h-6 text-gray-700 mr-1" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12 22.7C6.8 22.7 2.7 18.6 2.7 13.4C2.7 8.2 6.8 4.1 12 4.1C17.2 4.1 21.3 8.2 21.3 13.4C21.3 18.6 17.2 22.7 12 22.7ZM12 5.6C7.7 5.6 4.2 9.1 4.2 13.4C4.2 17.7 7.7 21.2 12 21.2C16.3 21.2 19.8 17.7 19.8 13.4C19.8 9.1 16.3 5.6 12 5.6Z"></path>
                        <path d="M12 16.6C12 16.6 10.8 15.3 10.1 14.2C9.3 13.1 9 12.5 9 11.7C9 10.5 10 9.5 11.2 9.5C12 9.5 12.7 9.9 13 10.4C13.3 9.9 14 9.5 14.8 9.5C16 9.5 17 10.5 17 11.7C17 12.5 16.7 13.1 15.9 14.2C15.2 15.3 14 16.6 14 16.6H12Z"></path>
                    </svg>
                    <span class="text-gray-700">@project.Size</span>
                </div>
            }
        </div>
    </div>
</div>
