@model SaveAmenityViewModel

@{
    ViewData["Title"] = "Create Amenity";
    bool editMode = !string.IsNullOrEmpty(Model.Id);
    string action = editMode ? "Update" : "Save";
}

<section class="py-12 bg-gray-100">
    <div class="container mx-auto px-6 md:px-12 lg:px-24">
        <h2 class="text-4xl font-bold mb-8 text-center">@action Amenity</h2>

        <form asp-controller="Amenity" asp-action="@action" method="post" class="bg-white p-8 rounded-lg shadow-md max-w-lg mx-auto border border-gray-300">
            <div class="mb-6">
                <label for="Name" class="block text-gray-700 font-semibold">Name</label>
                <input asp-for="Name" class="mt-1 block w-full border border-gray-400 rounded-md shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 py-2 px-3" />
                <span asp-validation-for="Name" class="text-red-500 text-sm mt-2 block"></span>
            </div>

            <div class="mb-6">
                <label for="Description" class="block text-gray-700 font-semibold">Description</label>
                <textarea asp-for="Description" class="mt-1 block w-full border border-gray-400 rounded-md shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 py-2 px-3"></textarea>
                <span asp-validation-for="Description" class="text-red-500 text-sm mt-2 block"></span>
            </div>

            <div class="flex justify-end space-x-4">
                <a asp-controller="Amenity" asp-action="Index" class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                    Cancel
                </a>
                <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
                    @action
                </button>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
