@model SavePropertyViewModel

<h2>Create Property</h2>

<form asp-action="CreateProperty" method="post" class="w-full max-w-lg">
    <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="Price">
            Value Sale
        </label>
        <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
               id="Price" name="Price" type="text" value="@Model.Price" />
        <span asp-validation-for="Price" class="text-red-500 text-xs italic"></span>
    </div>

    <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="Rooms">
            Rooms
        </label>
        <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
               id="Rooms" name="Rooms" type="number" value="@Model.Rooms" />
        <span asp-validation-for="Rooms" class="text-red-500 text-xs italic"></span>
    </div>

    <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="Bathrooms">
            Bathrooms
        </label>
        <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
               id="Bathrooms" name="Bathrooms" type="number" value="@Model.Bathrooms" />
        <span asp-validation-for="Bathrooms" class="text-red-500 text-xs italic"></span>
    </div>

    <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="Size">
            Size (m²)
        </label>
        <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
               id="Size" name="Size" type="text" value="@Model.Size" />
        <span asp-validation-for="Size" class="text-red-500 text-xs italic"></span>
    </div>

    <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="Description">
            Description
        </label>
        <textarea class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                  id="Description" name="Description">@Model.Description</textarea>
        <span asp-validation-for="Description" class="text-red-500 text-xs italic"></span>
    </div>

    <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="TypePropertyId">
            Property Type
        </label>
        <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
               id="TypePropertyId" name="TypePropertyId" type="text" value="@Model.TypePropertyId" />
        <span asp-validation-for="TypePropertyId" class="text-red-500 text-xs italic"></span>
    </div>

    <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="PropertyTypeSaleId">
            Sale Type
        </label>
        <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
               id="PropertyTypeSaleId" name="PropertyTypeSaleId" type="text" value="@Model.PropertyTypeSaleId" />
        <span asp-validation-for="PropertyTypeSaleId" class="text-red-500 text-xs italic"></span>
    </div>

    <div class="flex items-center justify-between">
        <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                type="submit">
            Create Property
        </button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
