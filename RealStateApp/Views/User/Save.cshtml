@model SaveUserViewModel

@{
    ViewData["Title"] = "Create User";
}

<section class="py-12 bg-gray-100">
    <div class="container mx-auto px-6 md:px-12 lg:px-24">
        <h2 class="text-4xl font-bold mb-8 text-center">Create User</h2>

        <form asp-action="CreateUser" method="post" enctype="multipart/form-data" class="bg-white p-8 rounded-lg shadow-md max-w-4xl mx-auto">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-gray-700 text-sm font-bold mb-2" asp-for="FirstName">First Name</label>
                    <input class="shadow-sm appearance-none border border-gray-400 rounded w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" asp-for="FirstName" type="text" />
                    <span asp-validation-for="FirstName" class="text-red-500 text-xs italic"></span>
                </div>

                <div>
                    <label class="block text-gray-700 text-sm font-bold mb-2" asp-for="LastName">Last Name</label>
                    <input class="shadow-sm appearance-none border border-gray-400 rounded w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" asp-for="LastName" type="text" />
                    <span asp-validation-for="LastName" class="text-red-500 text-xs italic"></span>
                </div>

                <div>
                    <label class="block text-gray-700 text-sm font-bold mb-2" asp-for="Phone">Phone</label>
                    <input class="shadow-sm appearance-none border border-gray-400 rounded w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" asp-for="Phone" type="text" />
                    <span asp-validation-for="Phone" class="text-red-500 text-xs italic"></span>
                </div>

                <div>
                    <label class="block text-gray-700 text-sm font-bold mb-2" asp-for="ImageFile">Image</label>
                    <input class="shadow-sm appearance-none border border-gray-400 rounded w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" asp-for="ImageFile" type="file" />
                    <span asp-validation-for="ImageFile" class="text-red-500 text-xs italic"></span>
                </div>

                <div>
                    <label class="block text-gray-700 text-sm font-bold mb-2" asp-for="Email">Email</label>
                    <input class="shadow-sm appearance-none border border-gray-400 rounded w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" asp-for="Email" type="email" />
                    <span asp-validation-for="Email" class="text-red-500 text-xs italic"></span>
                </div>

                <div>
                    <label class="block text-gray-700 text-sm font-bold mb-2" asp-for="UserName">User Name</label>
                    <input class="shadow-sm appearance-none border border-gray-400 rounded w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" asp-for="UserName" type="text" />
                    <span asp-validation-for="UserName" class="text-red-500 text-xs italic"></span>
                </div>

                <div>
                    <label class="block text-gray-700 text-sm font-bold mb-2" asp-for="Password">Password</label>
                    <input class="shadow-sm appearance-none border border-gray-400 rounded w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" asp-for="Password" type="password" />
                    <span asp-validation-for="Password" class="text-red-500 text-xs italic"></span>
                </div>

                <div>
                    <label class="block text-gray-700 text-sm font-bold mb-2" asp-for="ConfirmPassword">Confirm Password</label>
                    <input class="shadow-sm appearance-none border border-gray-400 rounded w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" asp-for="ConfirmPassword" type="password" />
                    <span asp-validation-for="ConfirmPassword" class="text-red-500 text-xs italic"></span>
                </div>

                <div class="md:col-span-2">
                    <label class="block text-gray-700 text-sm font-bold mb-2" asp-for="Type_User">User Type</label>
                    <select class="shadow-sm appearance-none border border-gray-400 rounded w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" asp-for="Type_User">
                        <option value="Admin">Admin</option>
                        <option value="Agent">Agent</option>
                        <option value="Client">Client</option>
                        <option value="Developer">Developer</option>
                    </select>
                    <span asp-validation-for="Type_User" class="text-red-500 text-xs italic"></span>
                </div>
            </div>

            <div class="flex items-center justify-between mt-6">
                <a href="@Url.Action("Index", "Admin")" class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                    Cancel
                </a>
                <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
                    Create User
                </button>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
